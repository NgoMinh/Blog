{% extends "WnBackendBundle::layout.html.twig" %}

{% block title %}Management Category{% endblock title %}

{% block body %}
<h3>Management Category</h3>
<hr/>
<a href="{{ path('wn_backend_category_add') }}">Add</a>
<table>
	<thead>
		<tr>
			<th>#Id</th>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for category in categories %}
		<tr>
			<td><a href="{{ path('wn_backend_category_edit', {'id':category.id}) }}">{{ category.id }}</a></td>
			<td>{{ category.name }}</td>
			<td><a href="{{ path('wn_backend_category_delete', {'id':category.id}) }}">delete</a></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock body %}