<div class="element element-article categorie-{{ article.categorie.nom }}">

	<div class="segment-top">
		<div class="categorie">{{ article.categorie.nom }}</div>
	</div><!-- segment-top -->


	<img src="{{ asset( article.imageAffiche.WebPath ) }}"/>


	<div class="segment-bottom">
		<div class="date-auteur">
			<div class="date">
				{{ article.datePublication | date('d / m / Y',"Europe/Paris") }}
			</div><!-- date-auteur -->
			<div class="auteur">
				Ã©crie par {{ article.auteur.username }}
			</div><!-- auteur -->
		</div><!-- date-auteur -->
		<div class="titre">
			<h2><a href="{{ path('wn_blog_article_voir',{'id':article.id}) }}">{{ article.titre }}</a></h2>
		</div><!-- titre -->
		
		<p class="synopsis">{{ article.synopsis | slice(0,200) }}...</p>
		<div class="social">
			<div class="commentaire inline" >
				{{ article.commentaires|length}} 
				<span class="icon-bubble"><span>
			</div><!-- commentaire -->
			<div class="reseau-sociaux inline">
				<a href="#" class="facebook"><span class="icon-facebook"></span></a>
				<a href="#" class="twitter"><span class="icon-twitter"></span></a>
			</div><!-- reseau-sociaux -->
		</div><!-- social -->

	</div><!-- segment-bottom -->

</div><!-- element-article -->