{% extends "WnBlogBundle::layout.html.twig" %}

{% block title %}Profil de {{ utilisateur.username }}{% endblock title %}

{% block nav %}
	{{ render(controller("WnBlogBundle:Article:menu")) }}
{% endblock nav %}
{% block container %}
{% stylesheets "@WnBlogBundle/Resources/public/css/profil.css" %}
	<link rel="stylesheet" type="text/css" href="{{asset_url}}">
{% endstylesheets %}
<script type="text/javascript">
	$(document).ready(function(){
		$('#container').imagesLoaded(function(){
			$('#container').masonry({
				itemSelector : '.element',
				gutter : 2,
			});
			$('#container').masonry('layout');
		});
	});
</script>
<div id="container">
	<div class="element element-antibug"></div>
	<div class="element profil">
		
		<span class="icon-user avatar"></span>
		<div class="pseudo-status">
			<h2 class="pseudo">{{ utilisateur.username }}</h2>
			<span class="status">Status : {{role}}</span>
		</div>

		<div class="info-sup">
		</div>
		
		{# Liste des articles publié #}
		<div class="categorie">
			<span class="nom">Article publié</span>
			<h4>Chronique</h4>
			<table>
			{% for chronique in chroniques %}
				<tr>
					<td class="date"><span class="date">{{chronique.datePublication|date('d-m-Y')}}</span><td>
					<td><a class="link" href="{{ path('wn_blog_article_voir',{'id':chronique.id}) }}">{{ chronique.titre }}</a><td>
				</tr>
			{% endfor %}
			</table>
			<h4>Tutoriel</h4>
			<table>
			{% for tutoriel in tutoriels %}
				<tr>
					<td class="date"><span class="date">{{tutoriel.datePublication|date('d-m-Y')}}</span></td>
					<td><a class="link" href="{{ path('wn_blog_article_voir', {'id': tutoriel.id}) }}">{{ tutoriel.titre }}</a></td>
				</tr>
			{% endfor %}
			</table>
			<h4>Evenement</h4>
			<table>
			{% for evenement in evenements %}
				<tr>
					<td class="date"><span class="date">{{evenement.datePublication|date('d-m-Y')}}</span></td>
					<td><a class="link" href="{{ path('wn_blog_article_voir', {'id': evenement.id}) }}">{{ evenement.titre }}</a></td>
				</tr>
			{% endfor %}
			</table>
		</div>

		{# Liste des images posté #}
		<div class="categorie">
			<span class="nom">Image dans la galerie</span>
			<table>
			{% for element in utilisateur.elements %}
				{% if element is wn_elementGalerie %}
				<tr>
					<td class="date">{{element.datePublication|date('d-m-Y')}}</td>
					<td><a class="link" href="#">{{ element.titre }}</a></td>
				</tr>
				{% endif %}
			{% endfor %}
			</table>
		</div>


		{# Liste des model 3D posté #}
		<div class="categorie">
			<span class="nom">Model 3D</span>
			<table>
			{% for element in utilisateur.elements %}
				{% if element is wn_model3d %}
				<tr>
					<td class="date">{{element.datePublication|date('d-m-Y')}}</td>
					<td><a class="link" href="#">{{ element.nom }}</a></td>
				</tr>
				{% endif %}
			{% endfor %}
			</table>
		</div>

		<div class="border-top"></div>
		<div class="border-bottom"></div>
	</div>

	{# Block sur les derniers commentaires posté #}
	<div class="element commentaires">
		<span class="ban">Dernier messages posté</span>
		{# Representation d'un commentaire #}
		{% for commentaire in commentaires %}
		<div class="commentaire">
			<span class="article">
				<a href="{{path('wn_blog_article_voir',{'id':commentaire.element.id})}}">
					{{ commentaire.element.titre }}
				</a>
			</span>
			<br/>
			<span class="date">
				<i>
					{{ commentaire.date|date('d-m-Y') }}
				</i>
			</span>
			<br/>
			<span class="contenu">
				{{ commentaire.contenu }}
			</span>
		</div>
		{% endfor %}
	</div>
	{# Fin du block sur les commentaires #}

</div>
{% endblock container %}