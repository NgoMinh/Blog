{% extends "WnBackendBundle::layout.html.twig" %}

{% block title %}Gestion des utilisateurs{% endblock title%}

{% block body %}
<h3>Gestion des utilisateurs</h3>
<hr>
<table>
	<thead>
		<tr>
			<th>#id</th>
			<th>pseudo</th>
			<th>email</th>
			<th>derniere connexion</th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
		<tr>
			<td>{{ user.id }}</td>
			<td>{{ user.username }}</td>
			<td>{{ user.email }}</td>
			<td>{{ user.lastlogin|date('d-m-Y') }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock body %}